{
	"langrev": "1",
	"warnings": ["no-unused"],
	"authors": [],
	"version": "0.1.0",
	"dependency-search-paths": [ "./dependencies"],
	"dependencies": ["glfw", "vk", "stb"],
	"features": ["GLFW_VK"],
	"linked-libraries": ["vulkan", "glfw"],
	"sources": ["./dependencies/gltf.c3", "./dependencies/camera.c3"],
	"c-sources": ["./dependencies/stb.c3l/native/*"],
	"cflags": "-fPIE",
	"targets": {
		"pbr": {
			"type": "executable",
			"sources-add": ["examples/pbr/main.c3"]
		},
		"pbr2": {
			"type": "executable",
			"sources-add": ["examples/pbr2/main.c3"]
		},
		"cube": {
			"type": "executable",
			"sources-add": ["examples/cube/main.c3"]
		},
		"basic": {
			"type": "executable",
			"sources-add": ["examples/basic/main.c3"]
		}
	},
	"output": "./build"
}