{
	"langrev": "1",
	"warnings": ["no-unused"],
	"authors": [],
	"version": "0.1.0",
	"dependency-search-paths": [ "./dependencies"],
	"dependencies": ["c3w", "vk", "stb"],
	"features": [],
	"linked-libraries": [],
	"sources": ["./dependencies/gltf.c3", "./dependencies/camera.c3", "./dependencies/render_state.c3"],
	"script-dir": "./",
	"targets": {
		"shaders": {
			"type": "static-lib",
			"exec": [
				"slangc examples/basic/shaders/shader.slang  -profile glsl_460 -target spirv -o examples/basic/shaders/shader.spv"
			]
		},
		"cubemap": {
			"type": "executable",
			"sources": ["examples/cubemap/main.c3"]
		},
		"cube": {
			"type": "executable",
			"sources": ["examples/cube/main.c3"]
		},
		"basic": {
			"type": "executable",
			"sources": ["examples/basic/main.c3"]
		}
	},
	"output": "./build"
}